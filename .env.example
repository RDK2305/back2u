# Back2u - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env with real secrets to git!

# Server Configuration
NODE_ENV=development
PORT=5000
SERVER_HOST=localhost

# Database Configuration
# Aiven Cloud MySQL - Back2u Database
# Copy credentials from your Aiven dashboard
DB_HOST=mysql-2c092634-back2u.a.aivencloud.com
DB_PORT=26526
DB_USER=avnadmin
DB_PASSWORD=your_aiven_password_here
DB_NAME=defaultdb
DB_SSL=true

# Complete Service URI (alternative connection method)
# DATABASE_URL=mysql://avnadmin:PASSWORD_HERE@mysql-2c092634-back2u.a.aivencloud.com:26526/defaultdb?ssl-mode=REQUIRED

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (Optional - for future use)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=10

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
